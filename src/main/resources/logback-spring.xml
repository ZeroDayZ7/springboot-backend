<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_PATH"
              value="logs" />
    <!-- Główny rolling appender -->
    <appender name="ROLLING"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>{"timestamp":"%date{ISO8601}","level":"%level","thread":"%thread","logger":"%logger{36}","correlationId":"%X{correlationId}","message":%msg}%n</pattern>
        </encoder>
    </appender>
    <!-- Konsola -->
    <appender name="CONSOLE"
              class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>
    <!-- Osobny appender dla ErrorLoggingFilter -->
    <appender name="SECURITY_FILE"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/security.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/security.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>{"timestamp":"%date{ISO8601}","level":"%level","thread":"%thread","logger":"%logger{36}","correlationId":"%X{correlationId}","message":%msg}%n</pattern>
        </encoder>
    </appender>
    <!-- Logger dla ErrorLoggingFilter -->
    <logger name="com.app.backend.filter.ErrorLoggingFilter"
            level="ERROR"
            additivity="false">
        <appender-ref ref="SECURITY_FILE" />
    </logger>
    <!-- Root logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="ROLLING" />
    </root>
    <!-- Debug dla całego pakietu backend -->
    <logger name="com.app.backend"
            level="DEBUG" />
</configuration>